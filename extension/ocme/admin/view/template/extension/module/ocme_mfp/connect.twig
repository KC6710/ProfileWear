{{ header }}

<div class="ocme-connect text-center">
	<div class="ocme-logo">
		OC MEGA <span>EXTENSIONS</span>
	</div>
	
	<hr />

	<center><font style="font-weight:300; font-size: 30px;">Thank you for choosing</font> <font style="font-weight:400; font-size: 30px;">Mega Filter PACK</font></center>

	<br /><br />
	<div class="guide">
		{{ ocme.trans('module::global.text_connect_guide') }}
	</div>
	<br /><br />
	<form method="post" action="{{ action_connect }}">		
		{% if connect_not_available %}
			<div class="alert alert-info text-center mb-30">{{ text_connect_not_available }}</div>
		{% endif %}
		
		<button class="btn btn-primary btn-lg" type="submit" {% if connect_not_available %} disabled="disabled" {% endif %}>
			<i class="fa fa-plug"></i> {{ reconnect ? ocme.trans('module::global.text_reconnect') : ocme.trans('module::global.text_connect') }}
		</button>
		<br /><br />

		{% for key, value in data %}
			<input type="hidden" name="{{ key }}" value="{{ value }}" />
		{% endfor %}
	</form>
</div>

{{ footer }}