{{ header }}

{% if header %}
	<div id="ocme-app" class="{{ ocme.oc().isV4() ? 'card' : 'panel panel-default ocme' }}">

	<div class="{{ ocme.oc().isV4() ? 'card-header' : 'panel-heading' }} panel-header">
		{% if ocme.oc().isV3() %}
			<h3 class="panel-title">
		{% endif %}
		<i class="fa fa-pencil"></i> {{ ocme.trans('module::global.text_edit') }}
		{% if ocme.oc().isV3() %}
			</h3>
		{% endif %}
	</div>
{% endif %}
	<div class="{{ ocme.oc().isV4() ? 'card' : 'container-fluid panel' }}-body">
		<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-attribute" {{ ocme.oc().isV3() ? 'class="form-horizontal"' : '' }}>
			<div class="{{ ocme.oc().isV4() ? 'row mb-3' : 'form-group' }} required">
				<label class="col-sm-2 {{ ocme.oc().isV4() ? 'col-form' : 'control' }}-label">{{ ocme.trans('module::global.text_name') }}:</label>
				<div class="col-sm-10">
					{% if attribute.values_type in [ 'integer', 'float' ] %}
						<input type="text" name="v{{ attribute.values_type }}" value="{{ ocme.request().post( 'v' ~ attribute.values_type, record['v'~attribute.values_type] ) }}" class="form-control" />
						{% if errors['v'~attribute.values_type] %}
							<div class="text-danger">{{ errors['v'~attribute.values_type] }}</div>
						{% endif %}
					{% else %}
						{% for language in languages %}
							<div class="input-group">
								<span class="input-group-{{ ocme.oc().isV4() ? 'text' : 'addon' }}">
									<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" />
								</span>
								<input type="text" name="descriptions[{{ language.language_id }}][name]" value="{{ ocme.request().post( 'descriptions.' ~ language.language_id ~ '.name', descriptions[language.language_id].name ) }}" placeholder="{{ entry_name }}" class="form-control" />
							</div>
							{% if errors.name[language.language_id] %}
								<div class="text-danger">{{ errors.name[language.language_id] }}</div>
							{% endif %}
						{% endfor %}
					{% endif %}
				</div>
			</div>
			<div class="{{ ocme.oc().isV4() ? 'row mb-3' : 'form-group' }}">
				<label class="col-sm-2 {{ ocme.oc().isV4() ? 'col-form' : 'control' }}-label" for="input-sort-order">{{ ocme.trans('module::global.text_sort_order') }}:</label>
				<div class="col-sm-10">
					<input type="text" name="sort_order" value="{{ record.sort_order }}" class="form-control" />
				</div>
			</div>
			<div class="{{ ocme.oc().isV4() ? 'row mb-3' : 'form-group' }}">
					<label class="col-sm-2 {{ ocme.oc().isV4() ? 'col-form' : 'control' }}-label" for="input-image">{{ ocme.trans('module::global.text_image') }}:</label>
					<div class="col-sm-10">
						{% if attribute.with_image %}
							{% if ocme.oc().isV4() %}
								<div class="card image">
									<img src="{{ thumb }}" alt="" title="" id="ocme-attribute-thumb-image" data-oc-placeholder="{{ placeholder }}" class="card-img-top"/>
									<input type="hidden" name="image" value="{{ image }}" id="ocme-attribute-input-image"/>
									<div class="card-body">
										<button type="button" data-oc-toggle="image" data-oc-target="#ocme-attribute-input-image" data-oc-thumb="#ocme-attribute-thumb-image" class="btn btn-primary btn-sm btn-block"><i class="fa-solid fa-pencil"></i> {{ button_edit }}</button>
										<button type="button" data-oc-toggle="clear" data-oc-target="#ocme-attribute-input-image" data-oc-thumb="#ocme-attribute-thumb-image" class="btn btn-warning btn-sm btn-block"><i class="fa-regular fa-trash-can"></i> {{ button_clear }}</button>
									</div>
								</div>
							{% else %}
								<a href="" id="ocme-attribute-image" data-toggle="image" class="img-thumbnail">
									<img src="{{ thumb }}" alt="" title="" data-placeholder="{{ placeholder }}"/>
								</a>
								<input type="hidden" name="image" value="{{ record.image }}" id="ocme-attribute-image-input"/>
							{% endif %}
						{% else %}
							<div class="pt-10">
								{{ ocme.trans('module::global.text_attribute_without_image') }}
								{% if edit_attribute_action %}
									<a href="{{ edit_attribute_action }}" class="btn btn-default btn-xs"><i class="fa fa-edit"></i> {{ ocme.trans('module::global.text_click_here') }}</a> {{ ocme.trans('module::global.text_if_you_want_to_enable_it') }}
								{% endif %}
							</div>
						{% endif %}
					</div>
			</div>
			<div class="{{ ocme.oc().isV4() ? 'row mb-3' : 'form-group' }}">
				<label class="col-sm-2 {{ ocme.oc().isV4() ? 'col-form' : 'control' }}-label" for="input-color">{{ ocme.trans('module::global.text_color') }}:</label>
				<div class="col-sm-10">
					{% if attribute.with_color %}
						<ocme-colorpicker name="color" value="{{ record.color }}" />
					{% else %}
						<div class="pt-10">
							{{ ocme.trans('module::global.text_attribute_without_color') }}
							{% if edit_attribute_action %}
								<a href="{{ edit_attribute_action }}" class="btn btn-default btn-xs"><i class="fa fa-edit"></i> {{ ocme.trans('module::global.text_click_here') }}</a> {{ ocme.trans('module::global.text_if_you_want_to_enable_it') }}
							{% endif %}
						</div>
					{% endif %}
				</div>
			</div>
		</form>
	</div>

{% if header %}
	</div>
{% endif %}

{{ footer }}