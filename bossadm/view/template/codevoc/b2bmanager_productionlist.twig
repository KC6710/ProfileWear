<script>
function searchResults(status)
{
	$('[name=\'filter_status\']').val(status);
	url = 'index.php?route=codevoc/b2bmanager_production&user_token={{user_token}}';
	var filter_status = $('[name=\'filter_status\']').val();
	if (filter_status != ''){
		url += '&filter_status=' + encodeURIComponent(filter_status);
	}
	location = url;
}
</script>
{{ footer }}
