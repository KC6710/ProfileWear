<script type="text/x-template" id="edit-component-template">
  <div class="edit-component">
    <div class="modal show" tabindex="-1" role="dialog" v-if="show">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" @click="close()"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Edit Article</h4>
          </div>
          <div class="modal-body">
            <div v-if="isMessage" :class="{'alert alert-success':isSuccess,'alert alert-danger':isError}" role="alert">
              <ul>
                <li v-for="item in infoMessage">${ item }</li>
              </ul>
            </div>
            <form ref="edit_form">
              <input type="hidden" name="id" :value="item.id">
              <table class="table">
                <thead>
                  <tr>
                    <th style="width: 10%">{{ text_table_column_article_nr }}</th>
                    <th style="width: 16%">{{ text_table_column_name }}</th>
                    <th style="width: 12%">{{ text_table_column_color }}</th>
                    <th style="width: 7%">{{ text_table_column_size }}</th>
                    <th style="width: 9%">{{ text_table_column_brand }}</th>
                    <th style="width: 9%">{{ text_table_column_quantity }}</th>
                    <th style="width: 8%">{{ text_table_column_location }}</th>
                    <th style="width: 8%">{{ text_table_column_price_1 }}</th>
                    <th style="width: 9%">{{ text_table_column_price_2 }}</th>
                    <th style="width: 12%">{{ text_table_column_comments }}</th>
                  </tr>
                </thead> <!-- thead -->
                <tbody>
                  <tr>
                    <td style="width: 10%">
                      <autocomplete :value="currentItem.article_nr" :index="0" token="{{ token }}" v-model="currentItem.article_nr"  @changed="autoCompleteChanged($event)"></autocomplete>
                      <!--<input type="text" :value="item.article_nr" v-model="currentItem.article_nr" name="article_nr">-->
                      </td>
                    <td style="width: 16%"><input type="text" :value="item.name" v-model="currentItem.name" name="name"></td>
                    <td style="width: 12%"><input type="text" :value="item.color" v-model="currentItem.color" name="color"></td>
                    <td style="width: 7%"><input type="text" :value="item.size" v-model="currentItem.size" name="size"></td>
                    <td style="width: 9%"><input type="text" :value="item.brand" v-model="currentItem.brand" name="brand"></td>
                    <td style="width: 9%"><input type="number" min="0" :value="item.quantity" v-model="currentItem.quantity" name="quantity"></td>
                    <td style="width: 8%"><input type="text" :value="item.location" v-model="currentItem.location" name="location"></td>
                    <td style="width: 8%"><input type="text" :value="item.price_1" v-model="currentItem.price_1" name="price_1"></td>
                    <td style="width: 9%"><input type="text" :value="item.price_2" v-model="currentItem.price_2" name="price_2"></td>
                    <td style="width: 12%"><input type="text" :value="item.comments" v-model="currentItem.comments" name="comments"></td>
                  </tr>
                </tbody>
              </table>
              <button type="button" class="btn btn-save btn-primary" @click="save()"><i class="fa fa-save"></i> Save changes</button>
            </form>
          </div>
          <div class="modal-footer justify-content-center">
            <div class="footer_info">
              <ul>
                <li><span><strong><i class="fa fa-calendar-plus-o" aria-hidden="true"></i> Date added: </strong></span>${ item.created_at }</li>
                <li><span><strong><i class="fa fa-calendar-check-o" aria-hidden="true"></i> Date added: </strong></span>${ item.updated_at }</li>
                <li><span><strong><i class="fa fa-user" aria-hidden="true"></i> Last update made by: </strong></span>${ item.last_update_by }</li>
              </ul>
            </div>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
  </div>
</script>

