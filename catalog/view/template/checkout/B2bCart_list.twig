<div class="left">
{% for product in products %}
  <div class="section-1 mt-2">
    <div class="left-side">
      <div class="product-div">
        {% if product.thumb %} 
          <a href="{{ product.href }}">
            <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="product-img" />
          </a> 
        {% endif %}
      </div>
      <div class="wrapper">
        <div class="detail-div">
          <h3><a href="{{ product.href }}">{{ product.name }}</a>{% if not product.stock %} <span class="text-danger">***</span>{% endif %}</h3>
          <h4>{{ product.quantity }} x {{ product.price }}</h4>
          <p>
            {% for option in product.option %}
              {{ option.value }} 
              {% if not loop.last %}
                 |
              {% endif %}
            {% endfor %}
          </p>
        </div>
        <div class="right-side">
          <div class="detail-div">
            <p>{{ product.total }}</p>
            <div style="position: relative">
              <div>
                <form method="post" data-oc-target="#shopping-cart"  >
                  <input type="hidden" name="quantity" value="{{ product.quantity }}" size="1" class="form-control">
                  <input type="hidden" name="product_id" value="{{ product.product_id }}">
                  {% for option in product.option %}
                  <input type="hidden" name="key[]" value="{{ option.cart_id }}">
                  {% endfor %}
                  <button type="submit" formaction="{{ product_remove }}" data-bs-toggle="tooltip" title="{{ button_remove }}" class="btn" disabled="disabled"><img class="delete_shopping_cart_icon" style="cursor:pointer;margin-top: -10px;" src="image/deleteIcon.svg"></button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
