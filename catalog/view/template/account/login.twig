{{ header }}
<div class="main-body signup-main">
  
  {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa-solid fa-circle-check"></i> {{ success }} <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
  {% endif %}
  {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa-solid fa-circle-exclamation"></i> {{ error_warning }} <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
  {% endif %}

  <div class="row justify-content-around">
    <div class="col-12 col-md-6 col-lg-7 col-xl-4">
      <ul class="nav-tabs">
        <li class="nav-item active">Logga in</li>
        <li class="nav-item">
          <a style="color: inherit; text-decoration: none" href="{{ register }}">Registrera konto</a>
        </li>
      </ul>
      <h4>{{ text_returning_customer }}</h4>
      <p>{{ text_i_am_returning_customer }}</p>
      <div>
        <form id="form-login" action="{{ login }}" method="post" data-oc-toggle="ajax">
          <div class="mb-3">
            <div class="mb-3">
              <label for="input-email" class="form-label input-label">{{ entry_email }} <span class="input-required">*</span></label>
              <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="input-default"/>
            </div>
            <div class="mb-3">
              <label for="passwordField" class="form-label input-label">{{ entry_password }}<span class="input-required">*</span></label>

              <div style="position: relative">
                <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="passwordField" class="input-default" required="" />

                <img src="image/eye.svg" onclick="showPassword()" style="
                    position: absolute;
                    left: 90%;
                    bottom: 35%;
                    cursor: pointer;
                  ">
              </div>
            </div>
          </div>
          <div class="d-flex justify-content-between align-items-center flex-wrap">
            <button type="submit" class="primaryButton">
              {{ button_login }} <img src="image/arrow-right.png">
            </button>
            <span data-bs-toggle="modal" data-bs-target="#staticBackdrop" style="cursor: pointer"><a href="{{ forgotten }}">{{ text_forgotten }}</a></span>
            {% if redirect %}
              <input type="hidden" name="redirect" value="{{ redirect }}"/>
            {% endif %}
          </div>
        </form>
      </div>
    </div>
    <div class="d-none d-md-block col-md-6 col-lg-5 col-xl-5">
      <img src="image/login-banner.png" width="100%">
    </div>
  </div>
{{ footer }}
