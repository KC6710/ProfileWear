{{ header }}
<div class="main-body signup-main">

  <div class="row justify-content-around">
    <div class="col-12 col-md-6 col-lg-7 col-xl-4">
      <ul class="nav-tabs">
        <li class="nav-item "><a style="color: inherit; text-decoration: none" href="{{ login }}">Logga in</a></li>
        <li class="nav-item active">
          {{ heading_title }}
        </li>
      </ul>
      <h4>Ny kund! Registrera konto</h4>
      <p>Genom att skapa ett konto kan du handla snabbare, se din orderstatus och få tillgång till din orderhistorik.</p>
      <div>
        <form id="form-register" action="{{ register }}" method="post" data-oc-toggle="ajax">
          <div class="mb-3">
            <div class="mb-3">
              <label for="input-firstname" class="form-label input-label">{{ entry_firstname }} <span class="input-required">*</span></label>
              <input type="text" name="firstname" value="" placeholder="{{ entry_firstname }}" id="input-firstname" class="input-default"required />
              <div id="error-firstname" class="invalid-feedback"></div>
            </div>
            <div class="mb-3">
              <label for="input-lastname" class="form-label input-label">{{ entry_lastname }} <span class="input-required">*</span></label>
              <input type="text" name="lastname" value="" placeholder="{{ entry_lastname }}" id="input-lastname" class="input-default" required />
              <div id="error-lastname" class="invalid-feedback"></div>
            </div>
            <div class="mb-3">
              <label for="input-email" class="form-label input-label">{{ entry_email }} <span class="input-required">*</span></label>
              <input type="email" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="input-default" required />
            </div>
            <div class="mb-3">
              <label for="input-telephone" class="form-label input-label">{{ entry_telephone }} <span class="input-required">*</span></label>
              <input type="tel" name="telephone" value="" placeholder="{{ entry_telephone }}" id="input-telephone" class="input-default" pattern="^\d{8,14}$" oninvalid="this.setCustomValidity('Telephone must be between 8 and 14 digits number.');" oninput="this.setCustomValidity('')" required />
              <div id="error-telephone" class="invalid-feedback"></div>
            </div>
            <div class="mb-3">
              <label for="passwordField" class="form-label input-label">{{ entry_password }} <span class="input-required">*</span></label>

              <div style="position: relative">
                <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="passwordField" class="input-default" required="" />

                <img src="image/eye.svg" onclick="showPassword()" style="
                    position: absolute;
                    left: 90%;
                    bottom: 35%;
                    cursor: pointer;
                  ">
              </div>
            </div>
          </div>
          {% for custom_field in custom_fields %}

            {% if custom_field.type == 'text' %}
              <div class="mb-3 custom-field custom-field-{{ custom_field.custom_field_id }}">
                <label for="input-custom-field-{{ custom_field.custom_field_id }}" class="form-label input-label">{{ custom_field.name }}</label>
                <input type="text" name="custom_field[{{ custom_field.custom_field_id }}]" value="{{ custom_field.value }}" placeholder="{{ custom_field.name }}" id="input-custom-field-{{ custom_field.custom_field_id }}" class="input-default" />
                <div id="error-custom-field-{{ custom_field.custom_field_id }}" class="invalid-feedback"></div>
              </div>
            {% endif %}

          {% endfor %}
          <div class="permissions">
            <div class="form-check">
              <input type="hidden" name="newsletter" value="0"/> 
              <input type="checkbox" name="newsletter" value="1" id="input-newsletter" class="form-check-input" checked />
              <label class="form-check-label" for="input-newsletter">
                Jag vill prenumerera på nyhetsbrev för erbjudanden.
              </label>
            </div>
            {% if text_agree %}
              <div class="form-check">
                <input type="checkbox" name="agree" value="1" class="form-check-input" id="input-agree" required />
                <label class="form-check-label" for="input-agree">
                  {{ text_agree }}
                </label>
              </div>
            {% endif %}
          </div>
          <div class="d-flex justify-content-between align-items-center flex-wrap">
            <button type="submit" class="primaryButton" style="margin-top: 20px">
              {{ button_continue }} <img src="image/arrow-right.png">
            </button>
            <span data-bs-toggle="modal" data-bs-target="#staticBackdrop" style="cursor: pointer"><a href="{{ forgotten }}">{{ text_forgotten }}</a></span>
            {% if redirect %}
              <input type="hidden" name="redirect" value="{{ redirect }}"/>
            {% endif %}
          </div>
        </form>
      </div>
    </div>
    <div class="d-none d-md-block col-md-6 col-lg-5 col-xl-5">
      <img src="image/signup-banner.png" width="100%">
    </div>
  </div>

{{ footer }}
